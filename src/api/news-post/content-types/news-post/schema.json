{
  "kind": "collectionType",
  "collectionName": "news_posts",
  "info": {
    "singularName": "news-post",
    "pluralName": "news-posts",
    "displayName": "News Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "news_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::news-category.news-category",
      "inversedBy": "news_posts"
    },
    "Description": {
      "type": "blocks"
    },
    "Icon": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "PublishDate": {
      "type": "date"
    },
    "Author": {
      "type": "string"
    },

    "metaTitle": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "metaDescription": {
      "type": "text",
      "required": false,
      "default": ""
    },
    "metaKeywords": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "canonicalUrl": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "ogTitle": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "ogDescription": {
      "type": "text",
      "required": false,
      "default": ""
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "twitterTitle": {
      "type": "string",
      "required": false,
      "default": ""
    },
    "twitterDescription": {
      "type": "text",
      "required": false,
      "default": ""
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
